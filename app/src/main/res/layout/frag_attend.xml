<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/best_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="약속시간을 잘 지켰나요?"
        android:layout_below="@+id/toolbar"
        android:textColor="@color/fui_bgFacebook"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:layout_margin="20sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/resetDatetv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_margin="15sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/best_title"/>

    <TextView
        android:id="@+id/nullText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="출석 기록이 없습니다."
        android:layout_margin="15sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/resetDatetv"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/attend_show"
        android:layout_below="@id/resetDatetv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">
    </LinearLayout>

    <Button
        android:id="@+id/resetBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_toRightOf="@+id/best_title"
        android:layout_marginTop="23sp"
        android:layout_marginRight="5sp"
        android:padding="10sp"
        android:background="@drawable/button_shape"
        android:text="RESET"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:visibility="invisible"

        />


</RelativeLayout>